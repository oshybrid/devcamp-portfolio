<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_individual_item.main_image.to_s, width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_individual_item.title %></h1>
      <hr>
      <em><%= @portfolio_individual_item.subtitle %></em>
      <hr>
      <p><%= @portfolio_individual_item.body %></p>
      <hr>
      <h3>Technologies Used</h3>
      <% @portfolio_individual_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>